groups:
  - name: celestia-bridge-{{ validator_celestia_chain_id }}
    rules:
    - alert: TooFewPeers
      expr: celestia_full_discovery_amount_of_peers{service_namespace="celestia"} < 2
      for: 5m
      labels:
        severity: major
      annotations:
        description: 'The number of connected P2P peers has been below the defined threshold in the last 5 minutes.'

    - alert: NoArchivalPeers
      expr: celestia_archival_discovery_amount_of_peers{service_namespace="celestia"} < 2
      for: 5m
      labels:
        severity: major
      annotations:
        description: 'The node is not connected to any archival peers'

    - alert: StalledBlocks
      expr: increase(celestia_hdr_sync_subjective_head_gauge{service_namespace="celestia"}[5m]) == 0
      labels:
        severity: critical
      annotations:
        description: 'Block production stalled. The node has not produced any blocks in the last 5 minutes.'

    - alert: NoReceiverMetricPoints
      expr: increase(otelcol_receiver_accepted_metric_points{service_namespace="celestia"}[1m]) == 0
      labels:
        severity: critical
      annotations:
        description: 'The OTEL Collector has stopped receiving metric points. Is the bridge node online?'

    - alert: InstanceDown
      expr: up{job="prometheus.scrape.celestia_da_otel_collector_da_{{ validator_celestia_chain_id }}"} == 0
      for: 1m
      labels:
        severity: critical
      annotations:
        description: "Instance has been down for more than 1 minute."

    - alert: OutOfSync
      expr: sum by (instance)(celestia_hdr_sync_subjective_head_gauge{service_namespace="celestia"}) - sum by (instance)(celestia_hdr_store_head_height_gauge{service_namespace="celestia"}) > 2
      for: 5m
      labels:
        severity: critical
      annotations:
        description: "Node is out of sync for more than 5 minutes."
